<?php
/**
 * Environment Configuration Template
 *
 * For legacy hosting that doesn't support environment variables:
 * 1. Copy this file as 'env.php' (same directory)
 * 2. Fill in your actual values below
 * 3. config.php will automatically load it at runtime
 *
 * IMPORTANT: Keep env.php private and never commit it to version control!
 */

// Prevent direct access - this file should only be included by config.php
if (basename($_SERVER['SCRIPT_FILENAME']) === basename(__FILE__)) {
    http_response_code(403);
    die('Direct access not permitted');
}

// Database Configuration
// Use 'sqlite' or 'mysql'
putenv('DB_TYPE=sqlite');

// SQLite Configuration (only if DB_TYPE=sqlite)
putenv('DB_PATH=/path/to/your/data/openelo.db');

// MySQL Configuration (only if DB_TYPE=mysql)
putenv('DB_HOST=localhost');
putenv('DB_PORT=3306');
putenv('DB_NAME=openelo');
putenv('DB_USER=root');
putenv('DB_PASSWORD=your-mysql-password');

// SMTP Email Settings
putenv('SMTP_HOST=smtp.example.com');
putenv('SMTP_PORT=587');
putenv('SMTP_USER=your-email@example.com');
putenv('SMTP_PASS=your-smtp-password');
putenv('MAIL_FROM=noreply@yourdomain.com');
putenv('MAIL_FROM_NAME=OpenELO');

// Application Settings
putenv('BASE_URL=https://yourdomain.com');
putenv('TOKEN_EXPIRY_HOURS=72');

// ELO Settings
putenv('ELO_START=1200');

// Language
putenv('DEFAULT_LANG=en');